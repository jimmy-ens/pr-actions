{
  "name": "pr-actions",
  "version": "1.0.0",
  "description": "Custom GitHub actions on PR or issues",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "test": "jest --passWithNoTests",
    "all": "npm run lint && npm run format-check && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimmy-ens/pr-actions.git"
  },
  "keywords": [
    "github-actions",
    "pull-request",
    "comment"
  ],
  "author": "Jimmy H",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jimmy-ens/pr-actions/issues"
  },
  "homepage": "https://github.com/jimmy-ens/pr-actions#readme",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.48",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  }
}
